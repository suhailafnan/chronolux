        <div class="screen-overlay"></div>
         
        <%-include("../layouts/adminSideBar.ejs") %>

        
        <main class="main-wrap">

            <%-include("../layouts/adminNavBar.ejs") %>

            
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Users</h2>
                        <p>Whole users logged in </p>
                    </div>
                    <div>
                        <a href="#" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Add user</a>
                    </div>
                </div>
                <div>
                  
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
   
        <% if (users.length > 0) { %>

            <% for (let i = 0; i < users.length; i++) { %>
                <tr>
                    <td><%= users[i].name %></td>
                
                    <td><%= users[i].email %></td>
    
                    <td>     
                        
                   <% if (users[i].is_blocked) { %>
                    <button class="btn btn-block" id="blockButton_<%= users[i]._id %>" onclick="confirmUnblock('<%= users[i]._id %>')" data-bs-toggle="tooltip" data-bs-placement="top" title="Unblock">
                      Unblock
                    </button>
                  <% } else { %>
                    <button class="btn btn-block" id="blockButton_<%= users[i]._id %>" onclick="confirmBlock('<%= users[i]._id %>')" data-bs-toggle="tooltip" data-bs-placement="top" title="Block">
                      Block
                    </button>
                  <% } %>
                        
                  <!-- <button class="btn btn-delete" onclick="confirmDelete('<%= users[i]._id %>')">Delete</button> -->
                  <button class="btn btn-delete" onclick="confirmDelete('<%= users[i]._id %>')">Delete</button>
                        
                        
       
                    </td>
                 
    
                </tr>
    
               <% } %>
    
        <% } else { %>
    
            <tr>
    
                <td colspan="3">Users Not Found</td> 
    
            </tr> 
    
        <% } %>
    </tbody>
</table>

                </div>
                
            </section>  
            
           
